<form action="/tracks" method="post" enctype="multipart/form-data">  
  <h3>Upload new track</h3>
  <label class="upload_field">Audio file*</label>
  <input class="upload_field" type="file" name="track"/>
  <label class="upload_field">Cover</label>
  <input class="upload_field" type="file" name="cover"/>
  <button class="hint upload_field" type="submit">Upload</button>
  <span class="hint upload_field">Supported files: MP3, Wav, and Ogg</span>
</form>